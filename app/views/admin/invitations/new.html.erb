<div class="cover-container d-flex h-100 p-3 mx-auto flex-column">

<main role="main" class="form-signin">
<%= form_with(model: @invite, url: admin_invitations_path, data: { turbo: false }) do |form| %>
  <div class="form-floating">
    <%= form.email_field :email_address, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], class: "form-control top-border-input", id: "floatingInput" %>
    <label for="floatingInput">Email address</label>
  </div>
  <div class="form-floating">
    <%= form.text_field :full_name, required: true, autocomplete: "full-name", placeholder: "Full name", maxlength: 72, class: "form-control bottom-border-input", id: "floatingPassword" %>
    <label for="floatingPassword">Full name</label>
  </div>
  <button class="w-100 btn btn-lg btn-primary" type="submit">Create</button>
<% end %>
</main>

</div>